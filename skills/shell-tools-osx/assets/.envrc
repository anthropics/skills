# direnv configuration example
# Place this file in project root as .envrc
# Then run: direnv allow

# Load .env file if it exists
dotenv_if_exists .env

# Set environment variables
export APP_ENV=dev
export DEBUG=true
export LOG_LEVEL=debug

# Add local bin to PATH
PATH_add bin
PATH_add node_modules/.bin

# Load mise runtimes (if using mise)
use mise

# Example: Load secrets from encrypted file
# export $(sops -d secrets.enc.yaml | grep -v '^#' | xargs)

# Example: Set up database connection
# export DATABASE_URL="postgres://localhost:5432/mydb_dev"

# Example: Configure AWS profile
# export AWS_PROFILE=dev
# export AWS_REGION=us-east-1
