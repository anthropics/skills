  <Block id="CERTIFICATE_OF_SERVICE" description="Standard CM/ECF service certificate">
    <w:p xmlns:w="http://schemas.microsoft.com/office/word/2003/wordml">
      <w:pPr>
        <w:pStyle w:val="Heading1"/>
        <w:spacing w:before="960" w:after="600"/>
        <w:jc w:val="center"/>
      </w:pPr>
      <w:r>
        <w:rPr>
          <w:rFonts w:ascii="Californian FB" w:h-ansi="Californian FB"/>
          <w:b/><w:b-cs/>
          <w:sz w:val="28"/><w:sz-cs w:val="28"/>
        </w:rPr>
        <w:t>CERTIFICATE OF SERVICE</w:t>
      </w:r>
    </w:p>
    <w:p xmlns:w="http://schemas.microsoft.com/office/word/2003/wordml">
      <w:pPr>
        <w:spacing w:after="240" w:line="480" w:line-rule="auto"/>
        <w:ind w:first-line="720"/>
      </w:pPr>
      <w:r>
        <w:rPr>
          <w:rFonts w:ascii="Californian FB" w:h-ansi="Californian FB"/>
          <w:sz w:val="28"/><w:sz-cs w:val="28"/>
        </w:rPr>
        <w:t>I hereby certify that on {{SERVICE_DATE}}, I electronically filed the foregoing {{DOCUMENT_TITLE}} with the Clerk of the Court using the CM/ECF system, which will send notification of such filing to all counsel of record.</w:t>
      </w:r>
    </w:p>
  </Block>

