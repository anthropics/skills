  <Block id="HEADING_1" description="Centered bold heading (section title)">
    <w:p xmlns:w="http://schemas.microsoft.com/office/word/2003/wordml">
      <w:pPr>
        <w:pStyle w:val="Heading1"/>
        <w:spacing w:before="960" w:after="600"/>
        <w:jc w:val="center"/>
      </w:pPr>
      <w:r>
        <w:rPr>
          <w:rFonts w:ascii="Californian FB" w:h-ansi="Californian FB"/>
          <w:b/><w:b-cs/>
          <w:sz w:val="28"/><w:sz-cs w:val="28"/>
        </w:rPr>
        <w:t>{{HEADING_TEXT}}</w:t>
      </w:r>
    </w:p>
  </Block>

  <Block id="HEADING_2" description="Numbered subheading (I., II., III.)">
    <w:p xmlns:w="http://schemas.microsoft.com/office/word/2003/wordml" xmlns:wx="http://schemas.microsoft.com/office/word/2003/auxHint">
      <w:pPr>
        <w:pStyle w:val="Heading2"/>
        <w:listPr>
          <wx:t wx:val="{{LIST_NUMBER}}"/>
          <wx:font wx:val="Times New Roman"/>
        </w:listPr>
        <w:spacing w:before="600" w:after="480"/>
      </w:pPr>
      <w:r>
        <w:rPr>
          <w:rFonts w:ascii="Californian FB" w:h-ansi="Californian FB"/>
          <w:b/><w:b-cs/>
          <w:sz w:val="28"/><w:sz-cs w:val="24"/>
        </w:rPr>
        <w:t>{{HEADING_TEXT}}</w:t>
      </w:r>
    </w:p>
  </Block>

